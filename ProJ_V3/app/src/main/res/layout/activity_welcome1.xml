<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".login.Welcome1">

    <Button
        android:id="@+id/btn"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/primary"
        android:text="ยินดีต้อนรับสู่ ExpenseX"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="356dp"
        android:text="แอปนี้มีการรักษาความปลอดภัยทางไอทีและควบคุมการเปิดเผยข้อมูลส่วนบุคคล หายห่วงได้เลย"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgCelebrate"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="100dp"

        android:contentDescription="Celebrate"
        android:src="@drawable/celebrate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>